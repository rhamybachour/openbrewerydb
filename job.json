{
  "name": "openbrewerydb",
  "email_notifications": {
    "no_alert_for_skipped_runs": false
  },
  "webhook_notifications": {},
  "timeout_seconds": 0,
  "max_concurrent_runs": 1,
  "tasks": [
    {
      "task_key": "bronze_layer",
      "run_if": "ALL_SUCCESS",
      "notebook_task": {
        "notebook_path": "<YOUR-DATABRICKS-WORKSPACE-PATH>/bronze_layer",
        "source": "WORKSPACE"
      },
      "job_cluster_key": "cluster",
      "max_retries": 1,
      "min_retry_interval_millis": 60000,
      "retry_on_timeout": false,
      "timeout_seconds": 0,
      "email_notifications": {},
      "webhook_notifications": {}
    },
    {
      "task_key": "silver_layer",
      "depends_on": [
        {
          "task_key": "bronze_layer"
        }
      ],
      "run_if": "ALL_SUCCESS",
      "notebook_task": {
        "notebook_path": "<YOUR-DATABRICKS-WORKSPACE-PATH>/silver_layer",
        "source": "GIT"
      },
      "job_cluster_key": "cluster",
      "max_retries": 1,
      "min_retry_interval_millis": 60000,
      "retry_on_timeout": false,
      "timeout_seconds": 0,
      "email_notifications": {},
      "webhook_notifications": {}
    },
    {
      "task_key": "gold_layer",
      "depends_on": [
        {
          "task_key": "silver_layer"
        }
      ],
      "run_if": "ALL_SUCCESS",
      "notebook_task": {
        "notebook_path": "<YOUR-DATABRICKS-WORKSPACE-PATH>/gold_layer",
        "source": "GIT"
      },
      "job_cluster_key": "cluster",
      "max_retries": 1,
      "min_retry_interval_millis": 60000,
      "retry_on_timeout": false,
      "timeout_seconds": 0,
      "email_notifications": {},
      "webhook_notifications": {}
    }
  ],
  "job_clusters": [
    {
      "job_cluster_key": "cluster",
      "new_cluster": {
        "cluster_name": "",
        "spark_version": "14.3.x-scala2.12",
        "spark_conf": {
          "spark.master": "local[*, 4]",
          "spark.databricks.cluster.profile": "singleNode"
        },
        "aws_attributes": {
          "first_on_demand": 1,
          "availability": "SPOT_WITH_FALLBACK",
          "zone_id": "us-east-1b",
          "spot_bid_price_percent": 100
        },
        "node_type_id": "m6gd.large",
        "driver_node_type_id": "m6gd.large",
        "custom_tags": {
          "ResourceClass": "SingleNode",
          "environment": "dev",
          "source": "openbrewerydb"
        },
        "spark_env_vars": {
          "PYSPARK_PYTHON": "/databricks/python3/bin/python3"
        },
        "enable_elastic_disk": false,
        "data_security_mode": "SINGLE_USER",
        "runtime_engine": "STANDARD",
        "num_workers": 0
      }
    }
  ],
  "git_source": {
    "git_url": "<YOUR-GITHUB-REPOSITORY>.git",
    "git_provider": "gitHub",
    "git_branch": "master"
  },
  "queue": {
    "enabled": true
  },
  "run_as": {
    "user_name": "<YOUR-EMAIL>"
  }
}